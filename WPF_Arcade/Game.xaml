<Window x:Class="WPF_Arcade.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Arcade"
        mc:Ignorable="d"
        Title="Game" Height="1080" Width="1920">
    <Canvas x:Name="GameWorld"
            Focusable="True"
            Background="Black"
            KeyDown="GameWorld_KeyDown"
            KeyUp="GameWorld_KeyUp">
        <TextBox Name="Player1TurnCounter" Height="30" Width="200" Text="P1Turn" Canvas.Left="10" Canvas.Top="45" Panel.ZIndex="996"></TextBox>
        <TextBox Name="Player1Score" Height="30" Width="200" Text="P1Score" Canvas.Left="10" Canvas.Top="10" Panel.ZIndex="1000"></TextBox>
        <TextBox Name="Player2TurnCounter" Height="30" Width="200" Text="P2Turn" Canvas.Left="368" Canvas.Top="45"></TextBox>
        <TextBox Name="Player2Score" Height="30" Width="200" Text="P2Score" Canvas.Left="368" Canvas.Top="10" RenderTransformOrigin="0.495,0.685"></TextBox>
    </Canvas>



</Window>
